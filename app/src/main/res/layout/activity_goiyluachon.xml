<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Goiyluachon">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/appbar_342">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginBottom="10dp"
                android:text="Gợi Ý Lựa Chọn" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:id="@+id/tablayout_id_342"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:textAlignment="center"
        android:textDirection="locale"
        app:tabTextColor="#0E0E0E"
        app:tabIndicatorColor="#2B7DBD"
        app:tabSelectedTextColor="#2B7DBD"
        android:background="#EDEDEA"
        android:gravity="center_horizontal" />

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager_id_342"></androidx.viewpager.widget.ViewPager>


</LinearLayout>